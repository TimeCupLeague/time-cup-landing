---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import { howItWorksContent } from '../../content/league';
---

<Section id="como-funciona" class="bg-gradient-to-b to-primary-800 from-indigo-900">
  <Container>
    <div class="text-center mb-16 text-white">
      <h2 class="heading-2 mb-6">{howItWorksContent.title}</h2>
      <p class="text-large max-w-3xl mx-auto">
        {howItWorksContent.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-white">
      {howItWorksContent.steps.map((step) => (
        <div class="text-center">
          <div
            class="w-16 h-16 bg-primary-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4"
          >
            {step.number}
          </div>
          <h3 class="heading-3 mb-4">{step.title}</h3>
          <p class="text-gray-300">
            {step.description}
          </p>
        </div>
      ))}
    </div>

   
    <div class="mt-16 bg-gray-200/50 rounded-xl p-8">
      <h3 class="heading-3 text-center mb-8">{howItWorksContent.timeline.title}</h3>

      <div class="grid grid-cols-1 md:grid-cols-7 gap-4 text-center">
        {howItWorksContent.timeline.week1.map((day) => (
          <div class={`bg-white rounded-lg p-4 shadow-sm ${day.borderColor ? `border-2 ${day.borderColor}` : ''}`}>
            <div class={`font-semibold mb-2 ${day.textColor || 'text-gray-700'}`}>{day.day}</div>
            <div class="text-sm text-gray-600">{day.activity}</div>
          </div>
        ))}
      </div>
      <div class="grid grid-cols-1 md:grid-cols-7 gap-4 text-center pt-3">
        {howItWorksContent.timeline.week2.map((day) => (
          <div class={`bg-white rounded-lg p-4 shadow-sm ${day.borderColor ? `border-2 ${day.borderColor}` : ''}`}>
            <div class={`font-semibold mb-2 ${day.textColor || 'text-gray-700'}`}>{day.day}</div>
            <div class="text-sm text-gray-600">{day.activity}</div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</Section>
