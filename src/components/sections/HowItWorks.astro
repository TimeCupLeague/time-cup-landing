---
import { howItWorksContent } from '../../content/league';
---

<div class="py-20 sm:py-32 bg-white/5" id="how-it-works">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
            <h2 class="text-base font-semibold leading-7 text-secondary-500">{howItWorksContent.title}</h2>
            <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">Experiencia online y Presencial</p>
            <p class="mt-6 text-lg leading-8 text-gray-300">{howItWorksContent.subtitle}</p>
        </div>
        <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
            <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
                
                {howItWorksContent.steps.map((step) => (
                    <div class="relative pl-16">
                    <dt class="text-2xl font-semibold leading-7 text-white">
                        <div class="absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-secondary-500">
                            <span class="text-2xl">{step.number}</span>
                        </div>
                        {step.title}
                    </dt>
                    <dd class="mt-2 text-base leading-7 text-gray-300">{step.description}</dd>
                    </div>
                  ))}
                
            </dl>
        </div>
    </div>
</div>