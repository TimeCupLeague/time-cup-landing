---
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import { leagueInfo } from '../../content/league';
---

<Section background='primary' padding='sm' class="relative overflow-hidden bg-gradient-to-t to-black from-primary-800">
  <!-- Background decoration -->
 
  <Container class="relative z-10">
    <div class="text-center text-white">

      <p class="text-4xl text-white font-bold mb-8 mx-auto animate-slide-up">
        {leagueInfo.tagline.toUpperCase()}
      </p>

      <p class="text-2xl text-white/90 mb-12 max-w-2xl mx-auto animate-slide-up">
        {leagueInfo.description}
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up"
      >
        <Button
          variant="primary"
          size="lg"
          href="#inscripcion"
          class="bg-white text-primary-500 hover:bg-primary-50 border-white"
        >
          Inscríbete Ahora
        </Button>

        <Button
          
          size="lg"
          href="/bases"
          class="text-white border-white hover:bg-white hover:text-primary-500"
        >
          Ver Bases
        </Button>
      </div>

      <!-- Stats -->
      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-16 pb-16 border-t border-b border-white/20"
      >
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.seasonDuration}
          </div>
          <div class="text-white/80">Duración</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.teamSize}
          </div>
          <div class="text-white/80">Equipo</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.categories}
          </div>
          <div class="text-white/80">Categorías</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.totalJornadas}
          </div>
          <div class="text-white/80">Jornadas</div>
        </div>
      </div>
    </div>
  </Container>
</Section>
