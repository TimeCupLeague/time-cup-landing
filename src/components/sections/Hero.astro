---
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import { leagueInfo } from '../../content/league';
---

<Section background="primary" class="relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-gradient-to-br from-red-600 to-red-800"></div>
  <div class="absolute inset-0 bg-black opacity-10"></div>

  <Container class="relative z-10">
    <div class="text-center text-white">
      <h1 class="heading-1 text-white mb-6 animate-fade-in">
        {leagueInfo.name}
      </h1>

      <p
        class="text-large text-red-100 mb-8 max-w-3xl mx-auto animate-slide-up"
      >
        {leagueInfo.tagline}
      </p>

      <p class="text-lg text-red-200 mb-12 max-w-2xl mx-auto animate-slide-up">
        {leagueInfo.description}
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up"
      >
        <Button
          variant="secondary"
          size="lg"
          href="#inscripcion"
          class="bg-white text-red-600 hover:bg-red-50 border-white"
        >
          Inscríbete Ahora
        </Button>

        <Button
          variant="ghost"
          size="lg"
          href="/bases"
          class="text-white border-white hover:bg-white hover:text-red-600"
        >
          Ver Bases
        </Button>
      </div>

      <!-- Stats -->
      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 pt-16 border-t border-red-300"
      >
        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.seasonDuration}
          </div>
          <div class="text-red-200">Duración</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.teamSize}
          </div>
          <div class="text-red-200">Por Equipo</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.categories}
          </div>
          <div class="text-red-200">Categorías</div>
        </div>

        <div class="text-center">
          <div class="text-3xl font-bold text-white mb-2">
            {leagueInfo.totalJornadas}
          </div>
          <div class="text-red-200">Jornadas</div>
        </div>
      </div>
    </div>
  </Container>
</Section>
