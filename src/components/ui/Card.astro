---
export interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true, ...rest } = Astro.props;

const baseClasses = 'card';
const hoverClasses = hover ? 'hover:shadow-md hover:-translate-y-1' : '';
const classes = `${baseClasses} ${hoverClasses} ${className}`.trim();
---

<div class={classes} {...rest}>
  <slot />
</div>
