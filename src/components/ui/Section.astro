---
export interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  background?: 'white' | 'gray' | 'primary';
  id?: string;
}

const {
  class: className = '',
  padding = 'lg',
  background = 'white',
  ...rest
} = Astro.props;

const paddingClasses = {
  sm: 'py-8 sm:py-12',
  md: 'py-12 sm:py-16',
  lg: 'py-16 sm:py-20 lg:py-24',
  xl: 'py-20 sm:py-24 lg:py-32',
};

const backgroundClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  primary: 'bg-primary-500',
};

const classes =
  `section-padding ${paddingClasses[padding]} ${backgroundClasses[background]} ${className}`.trim();
---

<section class={classes} {...rest}>
  <slot />
</section>
