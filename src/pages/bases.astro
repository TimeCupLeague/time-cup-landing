---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Container from '../components/ui/Container.astro';
import Section from '../components/ui/Section.astro';
import { leagueRules, howItWorksContent} from '../content/league';
import CTA from '../components/sections/CTA.astro';
---

<Layout>
  <Header />
  <main>
    <!-- Hero Section -->
    <Section background="gray" class="relative overflow-hidden">
      <div
        class="absolute inset-0 bg-black"
      >
      </div>
      <div class="absolute inset-0 bg-black opacity-10"></div>

      <Container class="relative z-10">
        <div class="text-center text-white">
          <h1 class="heading-1 text-white mb-6">Bases de la Liga</h1>

          <p class="text-large text-primary-100 mb-8 max-w-3xl mx-auto">
            Toda la información necesaria para participar en Time Cup League
          </p>
        </div>
      </Container>
    </Section>

    <!-- Rules Section -->
    <Section class="bg-white/5">
      <Container>
        <div class="max-w-4xl mx-auto">
          <div class="space-y-12">
            {
              leagueRules.map((rule, index) => (
                <div class="bg-white/5 rounded-xl shadow-sm p-8 border-l-4 border-primary-600">
                  <h2 class="heading-3 mb-6 text-white">
                    {index + 1}. {rule.title}
                  </h2>

                  {rule.content && (
                    <p class="text-gray-300 leading-relaxed mb-6">
                      {rule.content}
                    </p>
                  )}

                  {rule.subsections && (
                    <div class="space-y-4">
                      {rule.subsections.map(subsection => (
                        <div class="flex items-start">
                          <span class="text-primary-600 mr-3 mt-1">•</span>
                          <p class="text-gray-300 leading-relaxed">
                            {subsection}
                          </p>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              ))
            }
          </div>
        </div>
      </Container>
    </Section>

    <div class="mr-30 ml-30 mb-16 mt-16 p-8">
      <h3 class="heading-3 text-center mb-8 text-white">{howItWorksContent.timeline.title}</h3>

      <div class="grid grid-cols-1 md:grid-cols-7 gap-4 text-center">
        {howItWorksContent.timeline.week1.map((day) => (
          <div class={`bg-white/80 rounded-lg p-4 shadow-sm ${day.borderColor ? `border-2 ${day.borderColor}` : ''}`}>
            <div class={`font-semibold mb-2 ${day.textColor || 'text-gray-700'}`}>{day.day}</div>
            <div class="text-sm text-gray-600">{day.activity}</div>
          </div>
        ))}
      </div>
      <div class="grid grid-cols-1 md:grid-cols-7 gap-4 text-center pt-3">
        {howItWorksContent.timeline.week2.map((day) => (
          <div class={`bg-white/80 rounded-lg p-4 shadow-sm ${day.borderColor ? `border-2 ${day.borderColor}` : ''}`}>
            <div class={`font-semibold mb-2 ${day.textColor || 'text-gray-700'}`}>{day.day}</div>
            <div class="text-sm text-gray-600">{day.activity}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Section -->
    <CTA />
  </main>
  <Footer />
</Layout>
